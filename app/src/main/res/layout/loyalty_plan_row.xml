<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/rowId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        tools:ignore="UselessParent">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ilustracion_club"
            android:contentDescription="@string/loyaltyimage" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/planId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold" />
            <TextView
                android:id="@+id/dateId"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fontFamily="@font/normal"
                android:layout_weight="1" />
            <!--TextView
                android:id="@+id/termsId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/normal"
                android:drawableStart="@drawable/ic_terms_conditions"
                android:drawablePadding="10dp"
                android:textStyle="normal"
                android:autoLink="web"
                android:linksClickable="true"
                android:text="@string/terminos_y_condiciones_menu"/-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/unfollowId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_primary"
                    android:minHeight="0dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/desvincular_label"
                    android:textAllCaps="false"
                    android:fontFamily="@font/normal"
                    android:textSize="12sp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/conditionsId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_primary"
                    android:minHeight="0dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/conditions_label"
                    android:textAllCaps="false"
                    android:fontFamily="@font/normal"
                    android:textSize="12sp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/white" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/loader"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>