<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="56dp">

            <LinearLayout
                android:id="@+id/categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3.5"
                    android:fontFamily="@font/circular_book"
                    android:text="@string/categories_label"
                    android:textSize="15sp"
                    style="@style/TextAppearance.AppCompat"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/moreCategories"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/view_all"
                    android:textAllCaps="false"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_arrow_right"
                    app:iconGravity="textEnd"
                    app:iconTint="@color/colorPrimary" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/categoriesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/categories">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categoriesListId"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/featuredCoupons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/categoriesList">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3.5"
                    android:fontFamily="@font/circular_book"
                    android:text="Destacados"
                    android:textSize="15sp"
                    style="@style/TextAppearance.AppCompat"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/moreFeatures"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/view_all"
                    android:textAllCaps="false"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_arrow_right"
                    app:iconGravity="textEnd"
                    app:iconTint="@color/colorPrimary"
                    android:visibility="invisible"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/featuredCouponList"
                android:layout_width="0dp"
                android:layout_height="170dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/featuredCoupons">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/featuredCouponListId"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    tools:listitem="@layout/featured_item" />

                <include layout="@layout/empty_featured_coupons"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/discountCoupons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/featuredCouponList">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3.5"
                    android:fontFamily="@font/circular_book"
                    android:text="@string/commerce_label"
                    android:textSize="15sp"
                    style="@style/TextAppearance.AppCompat"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/moreCommerces"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/view_all"
                    android:textAllCaps="false"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_arrow_right"
                    app:iconGravity="textEnd"
                    app:iconTint="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/sortBy"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_location"
                    android:contentDescription="@string/location_label"
                    app:tint="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/CouponList"
                android:layout_width="match_parent"
                android:layout_height="440dp"
                app:layout_constraintTop_toBottomOf="@id/discountCoupons"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/CouponListId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="true"
                    tools:listitem="@layout/best_discounts_item" />

                <include layout="@layout/empty_home_discount_layout"/>

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>