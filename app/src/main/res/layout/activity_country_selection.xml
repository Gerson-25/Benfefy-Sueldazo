<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/base_margin"
    android:orientation="vertical"
    android:background="@drawable/card_bg"
    android:padding="@dimen/base_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">
            <ImageView
                android:id="@+id/closeSelectCountry"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_exit"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/worksans_bold"
            android:gravity="center"
            android:textSize="25sp"
            android:text="VALIDACIÃ“N EXITOSA!"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/succesDisclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hola Usuario, tus datos se validaron correctamente"
            android:fontFamily="@font/worksans_regular"
            android:textColor="@color/textSecondaryColor"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A partir de ahora puedes disfrutar todos los beneficios que te da el Banco gracias a tu cuenta Sueldazo"
            android:fontFamily="@font/worksans_regular"
            android:textColor="@color/textSecondaryColor"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Por favor escoge tu ciudad para mostrate todos los beneficios con los que cuentas"
            android:fontFamily="@font/worksans_regular"
            android:textColor="@color/textSecondaryColor"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/outline_edittext_bg">
            <Spinner
                android:id="@+id/simpleSpinnerCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                tools:listitem="@layout/custom_countryspinner_items"
                android:isScrollContainer="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_Aceptar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/accent_button"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/bold"
            android:text="Empezar"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/simpleSpinnerCountry" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/white"
            android:elevation="4dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/btn_Aceptar"
            app:layout_constraintEnd_toEndOf="@id/btn_Aceptar"
            app:layout_constraintTop_toTopOf="@id/btn_Aceptar"
            app:layout_constraintBottom_toBottomOf="@id/btn_Aceptar"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>