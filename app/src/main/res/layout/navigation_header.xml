<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.DayNight">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="12dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"/>

        <ImageButton
            android:id="@+id/qrUser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_qr"
            android:background="@color/transparent"
            android:layout_marginTop="14dp"
            app:layout_constraintEnd_toEndOf="@id/circleImageView"
            app:layout_constraintBottom_toBottomOf="@id/circleImageView"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_nombreHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/circular_book"
            android:textAlignment="center"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/circleImageView"
            android:textColor="?android:attr/textColorPrimary"/>

        <TextView
            android:id="@+id/txt_correoHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/myriad_pro_regular"
            android:textAlignment="center"
            android:paddingTop="4dp"
            android:textSize="12sp"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_nombreHeader" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_correoHeader"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/base_margin"
                    android:layout_marginEnd="@dimen/base_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="34dp"
                        android:src="@drawable/ic_pais"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:scaleType="centerInside"
                        app:tint="@color/colorPrimary" />

                    <Spinner
                        android:id="@+id/navCountryId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/base_margin"
                        android:gravity="center_vertical"
                        android:backgroundTint="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navProfileId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/base_margin"
                    android:layout_marginEnd="@dimen/base_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="34dp"
                        android:src="@drawable/ic_perfil_menu"
                        android:layout_marginStart="4dp"
                        android:scaleType="centerInside"
                        app:tint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/base_margin"
                        android:text="@string/perfil_menu"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:gravity="center_vertical"
                        style="@style/TextAppearance.AppCompat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navConditionsId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/base_margin"
                    android:layout_marginEnd="@dimen/base_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="34dp"
                        android:src="@drawable/ic_menu_conditions"
                        android:layout_marginStart="4dp"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/base_margin"
                        android:text="@string/terminos_y_condiciones_menu"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:gravity="center_vertical"
                        style="@style/TextAppearance.AppCompat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navCommentsId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/base_margin"
                    android:layout_marginEnd="@dimen/base_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="34dp"
                        android:src="@drawable/ic_menu_report"
                        android:layout_marginStart="4dp"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/base_margin"
                        android:text="@string/comentarios_menu"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:gravity="center_vertical"
                        style="@style/TextAppearance.AppCompat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navHelpId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/base_margin"
                    android:layout_marginEnd="@dimen/base_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="34dp"
                        android:src="@drawable/ic_menu_help"
                        android:layout_marginStart="4dp"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/base_margin"
                        android:text="@string/ayuda_menu"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:gravity="center_vertical"
                        style="@style/TextAppearance.AppCompat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navAboutId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/base_margin"
                    android:layout_marginEnd="@dimen/base_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="34dp"
                        android:src="@drawable/ic_menu_about"
                        android:layout_marginStart="4dp"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/base_margin"
                        android:text="@string/acerca_de"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:gravity="center_vertical"
                        style="@style/TextAppearance.AppCompat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navConfigurationId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/base_margin"
                    android:layout_marginEnd="@dimen/base_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="34dp"
                        android:src="@drawable/ic_menu_configuration"
                        android:layout_marginStart="4dp"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/base_margin"
                        android:text="@string/configuracion_menu"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:gravity="center_vertical"
                        style="@style/TextAppearance.AppCompat" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navLogoutId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/base_margin"
                    android:layout_marginEnd="@dimen/base_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="34dp"
                        android:src="@drawable/ic_menu_logout"
                        android:layout_marginStart="4dp"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/base_margin"
                        android:text="@string/cerrar_sesi_n_menu"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:gravity="center_vertical"
                        style="@style/TextAppearance.AppCompat" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>