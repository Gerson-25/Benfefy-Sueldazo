<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/gray_tb"
    android:background="@drawable/accent_button">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            card:layout_constraintEnd_toEndOf="parent"
            card:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_baseline_close_24"/>

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/worksans_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            card:layout_constraintEnd_toEndOf="parent"
            card:layout_constraintStart_toStartOf="parent"
            card:layout_constraintTop_toTopOf="parent"
            tools:text="Canje realizado exitosamente" />

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:ellipsize="end"
            android:fontFamily="@font/worksans_regular"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="15dp"
            android:textSize="14sp"
            card:layout_constraintBottom_toBottomOf="parent"
            card:layout_constraintEnd_toEndOf="parent"
            card:layout_constraintStart_toStartOf="parent"
            card:layout_constraintTop_toBottomOf="@id/title"
            tools:text="Acabas de canjear el cupon xxxxxxx. Tu ahorro para esta compra es de $xx.xx" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>