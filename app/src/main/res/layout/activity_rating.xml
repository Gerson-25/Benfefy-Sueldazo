<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/accent_button"
        android:backgroundTint="@color/white"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/cuentanos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/worksans_bold"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="@string/survey_title"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pregunta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="@dimen/base_margin"
            android:fontFamily="@font/worksans_bold"
            android:gravity="center"
            android:text="@string/cu_ntanos_c_mo_te_sentiste_con_los_servicios_de_nuestra_app"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cuentanos" />

        <TextView
            android:id="@+id/preg_C"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/worksans_regular"
            android:text="@string/_1_en_general_cuan_satisfecho_se_encuentra_con_el_beneficio_adquirido"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pregunta" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cv_cupon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/preg_C">

            <ImageButton
                android:id="@+id/molesto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/frustrado"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/zxing_transparent"
                android:src="@drawable/ic_terrible_selected"
                android:onClick="onAlignmentSelected"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/frustrado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/molesto"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/indiferente"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/zxing_transparent"
                android:src="@drawable/ic_bad_unselected"
                android:onClick="onAlignmentSelected"
                tools:ignore="ContentDescription" />


            <ImageButton
                android:id="@+id/indiferente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/frustrado"
                app:layout_constraintEnd_toStartOf="@id/contento"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/zxing_transparent"
                android:src="@drawable/ic_moreless_unselected"
                android:onClick="onAlignmentSelected"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/contento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/indiferente"
                app:layout_constraintEnd_toStartOf="@id/muy_contento"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/zxing_transparent"
                android:src="@drawable/ic_good_unselected"
                android:onClick="onAlignmentSelected"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/muy_contento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/contento"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/zxing_transparent"
                android:src="@drawable/ic_excelent_unselected"
                android:onClick="onAlignmentSelected"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/sep"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@color/gray_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_cupon" />

        <TextView
            android:id="@+id/preg_Co"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/_2_recomendar_a_usted_el_uso_de_nuestra_app"
            android:textSize="14sp"
            android:fontFamily="@font/worksans_regular"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sep" />

        <LinearLayout
            android:id="@+id/cv_app"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/preg_Co"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/one"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/worksans_bold"
                android:onClick="onNumberSelected"
                android:text="@string/_1"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/button_shape"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/two"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/two"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/worksans_bold"
                android:background="@drawable/button_shape"
                android:onClick="onNumberSelected"
                android:text="@string/_2"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center_horizontal|center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/three"
                app:layout_constraintStart_toEndOf="@id/one"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/three"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onNumberSelected"
                android:text="@string/_3"
                android:textAlignment="center"
                android:background="@drawable/button_shape"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="14sp"
                app:fontFamily="@font/worksans_bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/four"
                app:layout_constraintStart_toEndOf="@id/two"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/four"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/worksans_bold"
                android:onClick="onNumberSelected"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/_4"
                android:textAlignment="center"
                android:background="@drawable/button_shape"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/five"
                app:layout_constraintStart_toEndOf="@id/three"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/five"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/worksans_bold"
                android:onClick="onNumberSelected"
                android:text="@string/_5"
                android:textAlignment="center"
                android:background="@drawable/button_shape"
                android:textColor="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/six"
                app:layout_constraintStart_toEndOf="@id/four"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/six"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/worksans_bold"
                android:onClick="onNumberSelected"
                android:text="@string/_6"
                android:textAlignment="center"
                android:background="@drawable/button_shape"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/seven"
                app:layout_constraintStart_toEndOf="@id/five"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/seven"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/worksans_bold"
                android:onClick="onNumberSelected"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/_7"
                android:textAlignment="center"
                android:background="@drawable/button_shape"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/eight"
                app:layout_constraintStart_toEndOf="@id/six"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/eight"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/worksans_bold"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="onNumberSelected"
                android:text="@string/_8"
                android:textAlignment="center"
                android:background="@drawable/button_shape"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/nine"
                app:layout_constraintStart_toEndOf="@id/seven"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nine"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/worksans_bold"
                android:onClick="onNumberSelected"
                android:text="@string/_9"
                android:textAlignment="center"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/button_shape"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ten"
                app:layout_constraintStart_toEndOf="@id/eight"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ten"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/worksans_bold"
                android:onClick="onNumberSelected"
                android:text="@string/_10"
                android:textAlignment="center"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@android:color/white"
                android:background="@drawable/button_shape"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/nine"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <Button
            android:id="@+id/aceptar_cal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/accent_button"
            android:backgroundTint="@color/dark_blue"
            android:fontFamily="@font/worksans_regular"
            android:text="@string/rate_now"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_app"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/omitir_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/bold"
            android:text="@string/omitir"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/TextAppearance.AppCompat"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>