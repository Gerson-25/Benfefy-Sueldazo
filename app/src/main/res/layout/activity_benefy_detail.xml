<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/back_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:titleTextColor="@color/white"
            tools:targetApi="lollipop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/back_toolbar">

            <FrameLayout
                android:id="@+id/myContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <com.appbenefy.sueldazo.utils.ProportionalImageView
                    android:id="@+id/couponImageId"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:paddingLeft="0dp"
                    android:paddingTop="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/coupons_label" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/descriptionId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/container">

            <ImageView
                android:id="@+id/commerceImageId"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/titleId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17sp"
                    android:fontFamily="@font/circular_bold"/>

                <TextView
                    android:id="@+id/subtitleId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:fontFamily="@font/circular_book"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/informationId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/descriptionId">

            <LinearLayout
                android:id="@+id/available"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/couponQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/totalCouponId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:textSize="19sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/circular_book"
                        android:textColor="@color/white"
                        android:maxLines="1"
                        android:background="@drawable/button_shape"
                        android:backgroundTint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/availables"
                        android:textColor="@color/secondaryGray"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:fontFamily="@font/myriad_pro_regular"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/effectiveId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="1"
                    android:fontFamily="@font/myriad_pro_regular"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/couponPriceId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:textSize="19sp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/circular_book"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/couponOriginalPriceId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:textSize="14sp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/secondaryGray"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:maxLines="1"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/agenciesId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/informationId">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/locationImageId"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_cerca"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/agencyNameId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:fontFamily="@font/circular_book"/>

                        <TextView
                            android:id="@+id/agencyAddressId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/myriad_pro_regular"/>

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/showAgencies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/participant_brances"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/circular_book"
                    android:layout_gravity="end"
                    android:layout_marginBottom="4dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/qrCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/agenciesId">

            <ImageView
                android:id="@+id/qrImageId"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/qrCodeId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:fontFamily="@font/circular_bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/quantityId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="@id/qrCode"
            app:layout_constraintEnd_toEndOf="@id/qrCode"
            app:layout_constraintTop_toBottomOf="@id/qrCode">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cupon_number"
                        android:textColor="@color/colorPrimary"
                        android:maxLines="1"
                        android:fontFamily="@font/circular_book"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/to_exchange"
                        android:textColor="@color/secondaryGray"
                        android:maxLines="1"
                        android:fontFamily="@font/circular_book"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/availableType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@drawable/spinner_shape"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/availableSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:contentDescription="@string/drop_down"
                        android:scaleType="centerCrop"
                        android:src="@drawable/drop"
                        app:tint="@color/secondaryGray"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/userQuantityId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:fontFamily="@font/circular_book"
            app:layout_constraintStart_toStartOf="@id/qrCode"
            app:layout_constraintEnd_toEndOf="@id/qrCode"
            app:layout_constraintTop_toBottomOf="@id/quantityId"/>

        <TextView
            android:id="@+id/terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/terminos_y_condiciones_menu"
            android:textAlignment="center"
            android:fontFamily="@font/circular_book"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/userQuantityId"/>

        <TextView
            android:id="@+id/conditionsId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="center"
            android:fontFamily="@font/circular_book"
            app:layout_constraintTop_toBottomOf="@id/terms"/>

        <LinearLayout
            android:id="@+id/giftRegards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/conditionsId">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sendRegard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorPrimary"
                app:strokeWidth="2dp"
                app:strokeColor="@color/colorPrimary"
                app:cardCornerRadius="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:padding="7dp"
                    android:text="@string/send_thanks"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/circular_book"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/giftDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="1dp"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="8dp"
                app:strokeColor="@color/colorPrimary"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="@string/gift_detail"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"/>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="40dp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/giftRegards"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageButton
                android:id="@+id/facebook"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:src="@drawable/ic_facebook_social"
                android:background="@null"
                android:scaleType="centerCrop"
                android:contentDescription="@string/facebook_image"
                app:tint="@color/colorPrimaryDark" />

            <ImageButton
                android:id="@+id/instagram"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:src="@drawable/ic_instagram_social"
                android:background="@null"
                android:scaleType="centerCrop"
                android:contentDescription="@string/google_image"
                app:tint="@color/colorPrimaryDark" />

            <ImageButton
                android:id="@+id/linkedin"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:src="@drawable/ic_linkedin_social"
                android:background="@null"
                android:scaleType="centerCrop"
                android:contentDescription="@string/google_image"
                android:visibility="gone"
                app:tint="@color/colorPrimaryDark" />

            <ImageButton
                android:id="@+id/whatsapp"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:src="@drawable/ic_whatsapp_social"
                android:background="@null"
                android:scaleType="centerCrop"
                android:contentDescription="@string/google_image"
                app:tint="@color/colorPrimaryDark" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>