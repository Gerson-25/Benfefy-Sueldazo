<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="@dimen/base_margin"
                android:layout_marginEnd="@dimen/base_margin"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/close"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_exit"/>

                <ImageView
                    android:id="@+id/closeId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:visibility="gone"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_close"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/base_margin"
                android:layout_marginEnd="@dimen/base_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/worksans_bold"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="UPS!"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/sendDisclaimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Todavia no estás registrado en Benefy, ¿Qué esperas? Registra tu cuenta."
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/textSecondaryColor"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_horizontal" />

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Y si no recibes tu sueldo en el BNB, convence a tu jefe, para poder disfrutar de estos beneficios"
                android:fontFamily="@font/worksans_regular"
                android:textColor="@color/textSecondaryColor"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_horizontal" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/accept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/accent_button"
                    android:fontFamily="@font/worksans_regular"
                    android:textAllCaps="false"
                    android:text="Más Información"
                    android:textColor="@color/white"
                    android:textSize="16sp"

                    />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>