<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>

    <style name="labelTextStyle" parent="AppTheme">
        <item name="textSize">14sp</item>
        <item name="textColor">@color/colorPrimary</item>
        <item name="textStyle">bold</item>
        <item name="fontFamily">@font/circular_bold</item>
    </style>

    <style name="editTextStyle" parent="AppTheme">
        <item name="textSize">24sp</item>
        <item name="textColor">@color/colorPrimary</item>
        <item name="textStyle">normal</item>
        <item name="fontFamily">@font/myriad_pro_regular</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="FullScreenNoToolBarTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="CheckBoxIndigo">
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="MyToolbarStyle" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorSecondary">#919DB7</item>
    </style>

    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">#808080</item>
        <item name="android:progressTint">#FF0000</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="AdvancedProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">#808080</item>
        <item name="android:startColor">@color/gradient_start_color</item>
        <item name="android:endColor">@color/gradient_end_color</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/black</item>

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/zxing_transparent</item>

    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#FE9305</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    // TextInputLayout
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="simpleDialog" parent="AppTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--item name="android:backgroundDimEnabled">false</item-->
        <item name="android:windowTitleStyle">@null</item>
        <!--item name="android:background">@color/white</item-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="popupMenuStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:divider">@color/loader</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="CheckBoxAlternate" parent="Theme.MaterialComponents.DayNight">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.PrimaryAccent">
        <item name="colorAccent">@color/colorPrimary</item> <!-- Whatever color you want-->
    </style>

    <declare-styleable name="CircleButton">
        <attr name="startAngle" format="float" />
        <attr name="offsetAngle" format="float" />
        <attr name="color" format="color" />
        <attr name="strokeColor" format="color" />
        <attr name="circleStrokeWidth" format="float" />
        <attr name="cicleSize" format="dimension" />
        <attr name="fillColor" format="color" />
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="textStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
    </declare-styleable>

    <style name="ToolbarLoginTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/darkGray</item>
    </style>

    <!-- Font Size Styles -->
    <style name="AppTheme.Small">
        <item name="textTitle">@font/bold</item>
        <item name="textNormal">@font/normal</item>
        <item name="textSmall">@font/normal</item>
        <item name="textLarge">@font/normal</item>
    </style>

    <style name="MerckersCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

</resources>
