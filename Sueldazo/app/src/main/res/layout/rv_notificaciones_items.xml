<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card:cardCornerRadius="10dp"
    card:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="4dp"
            android:src="@drawable/isotipo_benefy_color"
            card:layout_constraintStart_toStartOf="parent"
            card:layout_constraintTop_toTopOf="parent"
            card:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/circular_bold"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            card:layout_constraintEnd_toEndOf="parent"
            card:layout_constraintStart_toEndOf="@id/image"
            card:layout_constraintTop_toTopOf="parent"
            style="@style/TextAppearance.AppCompat"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/normal"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            card:layout_constraintStart_toEndOf="@id/image"
            card:layout_constraintTop_toBottomOf="@id/title"
            card:layout_constraintEnd_toEndOf="parent"
            style="@style/TextAppearance.AppCompat"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="10dp"
            android:textSize="12sp"
            android:fontFamily="@font/normal"
            android:ellipsize="end"
            android:maxLines="1"
            card:layout_constraintStart_toEndOf="@id/image"
            card:layout_constraintTop_toBottomOf="@id/description"
            card:layout_constraintEnd_toEndOf="parent"
            card:layout_constraintBottom_toBottomOf="parent"
            style="@style/TextAppearance.AppCompat"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>