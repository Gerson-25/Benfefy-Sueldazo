<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLigth"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/dark_blue"
                    android:padding="10dp"
                    android:src="@drawable/ic_info"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:text="@string/commerce_info_label"
                    android:textColor="@color/dark_blue"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/closeId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:background="@android:color/transparent"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_close" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    android:layout_margin="@dimen/base_margin">
                <ImageView
                    android:id="@+id/imageId"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:gravity="center"
                        android:textSize="18sp"
                        style="@style/TextAppearance.AppCompat"/>

                    <TextView
                        android:id="@+id/categoryNameId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/normal"
                        android:gravity="center"
                        style="@style/TextAppearance.AppCompat"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/instagramId"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_ig_selected"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/facebookId"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_fb_selected"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/whatsAppId"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_wa_selected"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/descriptionId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/normal"
                style="@style/TextAppearance.AppCompat"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/base_margin"
                android:layout_marginEnd="@dimen/base_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phoneId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/base_margin"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/normal"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@drawable/ic_telefono"
                    style="@style/TextAppearance.AppCompat" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="@dimen/base_margin"
                android:backgroundTint="@color/loader" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="@dimen/base_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/emailId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/base_margin"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:drawableStart="@drawable/ic_mail_outline"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/normal"
                    android:gravity="center_vertical"
                    style="@style/TextAppearance.AppCompat"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="@dimen/base_margin"
                android:backgroundTint="@color/loader" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="@dimen/base_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addressId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/base_margin"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:drawableStart="@drawable/ic_info_sucursal"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/normal"
                    android:gravity="center_vertical"
                    style="@style/TextAppearance.AppCompat"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="@dimen/base_margin"
                android:backgroundTint="@color/loader" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="@dimen/base_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/schedulerId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/base_margin"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:drawableStart="@drawable/ic_horario"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/normal"
                    android:gravity="center_vertical"
                    style="@style/TextAppearance.AppCompat"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="@dimen/base_margin"
                android:backgroundTint="@color/loader" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="@dimen/base_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/websiteId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/base_margin"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:drawableStart="@drawable/ic_website"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/normal"
                    android:gravity="center_vertical"
                    style="@style/TextAppearance.AppCompat"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>