<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarTheme"
        app:titleTextColor="@color/white"
        tools:targetApi="lollipop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mesConsultado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/bold"
                android:text="@string/ahorro_del_mes"
                android:textAlignment="center"
                android:textSize="26sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/TextAppearance.AppCompat"/>

            <TextView
                android:id="@+id/txt_pais"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/normal"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mesConsultado"
                style="@style/TextAppearance.AppCompat"/>

            <TextView
                android:id="@+id/mesActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/bold"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/mes_actual"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/sp_mes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/sp_year"
                app:layout_constraintBottom_toBottomOf="@id/sp_year"
                style="@style/TextAppearance.AppCompat"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_mes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/normal"
                app:layout_constraintEnd_toStartOf="@id/sp_year"
                app:layout_constraintStart_toEndOf="@id/mesActual"
                app:layout_constraintTop_toBottomOf="@+id/txt_pais" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/normal"
                app:layout_constraintStart_toEndOf="@id/sp_mes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_pais"/>

<!--            <com.github.mikephil.charting.charts.HorizontalBarChart-->
<!--                android:id="@+id/barChart"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="800dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:layout_marginBottom="15dp"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/perdida"-->
<!--                style="@style/TextAppearance.AppCompat"/>-->

            <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                android:id="@+id/AAChartView"
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/perdida"/>

            <ImageView
                android:id="@+id/perdida"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_perdida"
                app:layout_constraintEnd_toStartOf="@id/txt_p"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sp_mes"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_p"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/sep3"
                app:layout_constraintStart_toEndOf="@id/perdida"
                app:layout_constraintTop_toTopOf="@id/perdida"
                style="@style/TextAppearance.AppCompat"/>

            <TextView
                android:id="@+id/txt_perdida"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/txt_p"
                app:layout_constraintStart_toStartOf="@id/txt_p"
                app:layout_constraintTop_toBottomOf="@+id/txt_p"
                style="@style/TextAppearance.AppCompat"/>

            <View
                android:id="@+id/sep3"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gray"
                android:backgroundTint="@color/gray"
                app:layout_constraintEnd_toStartOf="@id/ahorro"
                app:layout_constraintStart_toEndOf="@id/txt_p"
                app:layout_constraintTop_toTopOf="@id/perdida" />

            <ImageView
                android:id="@+id/ahorro"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_ahorro"
                app:layout_constraintEnd_toStartOf="@id/txt_a"
                app:layout_constraintStart_toEndOf="@id/sep3"
                app:layout_constraintTop_toBottomOf="@+id/sp_mes"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_a"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="@string/ahorro_p"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ahorro"
                app:layout_constraintTop_toTopOf="@id/ahorro"
                style="@style/TextAppearance.AppCompat"/>

            <TextView
                android:id="@+id/txtahorro1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txt_a"
                app:layout_constraintTop_toBottomOf="@+id/txt_a"
                style="@style/TextAppearance.AppCompat"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>