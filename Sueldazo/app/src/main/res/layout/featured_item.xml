<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemId"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_margin="4dp"
    android:foregroundTint="@android:color/transparent"
    cardview:cardBackgroundColor="@android:color/transparent"
    cardview:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            cardview:layout_constraintGuide_percent="0.6" />

        <ImageView
            android:id="@+id/couponImageId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            cardview:layout_constraintTop_toTopOf="parent"
            cardview:layout_constraintBottom_toBottomOf="@id/divider"
            android:scaleType="centerCrop"
            android:contentDescription="@string/coupons_label"/>

        <TextView
            android:id="@+id/titleCouponId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/circular_book"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintEnd_toStartOf="@id/favorite"
            cardview:layout_constraintTop_toTopOf="@id/divider"/>

        <TextView
            android:id="@+id/subtitleCouponId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/secondaryGray"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/myriad_pro_regular"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintEnd_toStartOf="@id/favorite"
            cardview:layout_constraintTop_toBottomOf="@id/titleCouponId"/>

        <ImageButton
            android:id="@+id/favorite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_mark_fav"
            android:layout_marginEnd="4dp"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintTop_toTopOf="@id/titleCouponId"
            cardview:layout_constraintBottom_toBottomOf="@id/subtitleCouponId"
            android:contentDescription="@string/favorite_label" />

        <ImageView
            android:id="@+id/commerceImageId"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toBottomOf="@id/subtitleCouponId"
            cardview:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/commerce_info_label"/>

        <TextView
            android:id="@+id/couponOriginalPriceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:textSize="12sp"
            android:textAlignment="viewEnd"
            android:textColor="@color/secondaryGray"
            android:maxLines="1"
            android:fontFamily="@font/myriad_pro_regular"
            cardview:layout_constraintStart_toEndOf="@id/commerceImageId"
            cardview:layout_constraintEnd_toStartOf="@id/couponPriceId"
            cardview:layout_constraintTop_toTopOf="@id/commerceImageId"
            cardview:layout_constraintBottom_toBottomOf="@id/commerceImageId"/>

        <TextView
            android:id="@+id/couponPriceId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:textSize="17sp"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorPrimary"
            android:maxLines="1"
            android:fontFamily="@font/circular_book"
            cardview:layout_constraintStart_toEndOf="@id/couponOriginalPriceId"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintTop_toTopOf="@id/commerceImageId"
            cardview:layout_constraintBottom_toBottomOf="@id/commerceImageId"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>