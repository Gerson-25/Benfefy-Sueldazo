<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_canje"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_benefy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_Pais"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="@string/cu_ntanos_queremos_saber_de_que_pais_deseas_recibir_tus_promociones_y_notificaciones"
        android:fontFamily="@font/normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_canje"
        style="@style/TextAppearance.AppCompat"/>

    <Spinner
        android:id="@+id/simpleSpinnerCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_Pais"/>

    <Button
        android:id="@+id/btn_Aceptar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="80dp"
        app:layout_constraintTop_toBottomOf="@id/simpleSpinnerCountry"
        android:layout_marginTop="20dp"
        android:text="@string/aceptar"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"
        android:fontFamily="@font/bold"
        android:textSize="20sp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/white"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/btn_Aceptar"
        app:layout_constraintEnd_toEndOf="@id/btn_Aceptar"
        app:layout_constraintTop_toTopOf="@id/btn_Aceptar"
        app:layout_constraintBottom_toBottomOf="@id/btn_Aceptar"/>

</androidx.constraintlayout.widget.ConstraintLayout>